@model IEnumerable<Product>
<div class="mt-5 text-center border-bottom">
    <div class="display-6"> Products</div>
</div>

<div class="row">
    @foreach (var prd in Model)
    {
        <div class="col-md-3 my-3">
            <div class="card" style="witht:18rem;">
                <div class="card-body">
                    <h5 class="card-title">@prd.Name</h5>
                    <p class="card-text">@prd.Price</p>
                    <a asp-action="Update" asp-controller="Product" asp-route-id="@prd.Id" class="btn btn-primary">Edit</a>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <div class="form-check form-switch">
                            <input type="hidden" name="Id" value="@prd.Id" />
                            <input type="checkbox" checked="@prd.Id" />

                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" disabled>
                            <label class="form-check-label" for="flexSwitchCheckDefault">ShowCase</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>