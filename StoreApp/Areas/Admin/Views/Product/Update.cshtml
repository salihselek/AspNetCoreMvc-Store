@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Update</div>
</div>

<form method="post" enctype="multipart/form-data" asp-action="Update" asp-controller="Product">
    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group my-3">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">

        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input type="file" name="file" class="form-control" />
    </div>
    <div class="form-group my-3">
        <img src="@Model?.ImageUrl" class="rounded shadow" width="150" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-check form-switch">
        <input asp-for="ShowCase" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">ShowCase</label>
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Update</button>
            <a asp-action="Index" class="btn btn-outline-primary"><i class="fa fa-list"></i> Products</a>
        </div>
    </div>
</form>