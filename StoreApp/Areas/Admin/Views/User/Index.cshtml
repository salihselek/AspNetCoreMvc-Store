@model IEnumerable<IdentityUser>

<div class="text-center my-5">
    <div class="display-6">Users</div>
</div>

<table>
    <thead>
        <th>Id</th>
        <th>UserName</th>
        <th>Roles</th>
        <th>Operations</th>
    </thead>
    <tbody>
        @foreach (IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>-</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Update" asp-route-id="@user.UserName" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="ResetPassword" asp-route-id="@user.UserName" class="btn btn-sm btn-info">Reset
                            Password</a>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>