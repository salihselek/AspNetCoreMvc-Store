@model IEnumerable<IdentityUser>

<div class="text-center my-5">
    <div class="display-6">Users</div>
</div>

<table>
    <thead>
        <th>Id</th>
        <th>UserName</th>
        <th>Roles</th>
        <th>Operations</th>
    </thead>
    <tbody>
        @foreach (IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>-</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Update" asp-route-id="@user.UserName"
                            class="btn btn-sm btn-warning rounded-0">Edit</a>
                        <a asp-action="ResetPassword" asp-route-id="@user.UserName"
                            class="btn btn-sm btn-info rounded-0">Reset
                            Password</a>
                        <form asp-action="DeleteOneUser" method="post">
                            <input type="hidden" name="UserName" value="@user.UserName" />
                            <button type="submit" class="btn btn-danger rounded-0">
                                <i class="fa fa-solid fa-trash"></i>
                                Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>